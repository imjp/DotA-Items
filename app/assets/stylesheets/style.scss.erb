$red: #9C3021;

@mixin box-shadow($radius: 5px, $rgb: 0){
	box-shadow: 0 0 $radius rgba($rgb,$rgb,$rgb,0.8) !important;
	-moz-box-shadow: 0 0 $radius rgba($rgb,$rgb,$rgb,0.8) !important;
	-webkit-box-shadow: 0 0 $radius rgba($rgb,$rgb,$rgb,0.8) !important;
}

@mixin rounded-corners($radius: 5px){
	border-radius: $radius;
	-moz-border-radius: $radius;
	-webkit-border-radius: $radius;
}

