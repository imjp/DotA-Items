<h2>Change your password</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %> 
	
	<%= f.inputs do %> 
		<%= f.input :password, :as => :password, :label => "New password" %>
		<%= f.input :password_confirmation, :as => :password, :label => "Confrm new password" %>
	<% end %>
		 
	<%= f.buttons do %> 
		<%= f.submit "Change my password" %>
	<% end %>
<% end %> 

<%= render :partial => "devise/shared/links" %>